<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Owners</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom RPV Color Configuration */
        :root {
            --primary-color: #003262; /* Deep Navy Blue */
            --accent-color: #FF5A5F;
        }
        /* Custom utility classes to use RPV colors */
        .text-rpv-blue { color: var(--primary-color); }
        .bg-rpv-blue { background-color: var(--primary-color); }
        .border-rpv-accent { border-color: var(--accent-color); }
        .hover\:bg-rpv-accent:hover { background-color: var(--accent-color); }
        .focus\:ring-rpv-accent:focus { --tw-ring-color: var(--accent-color); }
        .bg-rpv-accent {background-color: var(--accent-color);}
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* Slate 50 from Login Page */
            padding-top: 4rem;
        }
    </style>
</head>

<%- include('partials/navbar.ejs') %>

<body class="bg-gray-50 text-gray-800">
    <div class="max-w-7xl mx-auto p-6">
        <h1 class="text-2xl font-semibold mb-4">Owners</h1>

        <form method="GET" action="/directory" class="mb-6">
            <div class="max-w-lg mx-auto"> 
                <div class="flex items-center space-x-2">
                    <input
                        type="search"
                        name="search"
                        placeholder="Search by name..."
                        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                        class="flex-grow p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rpv-blue"
                    >
                    <button
                        type="submit"
                        class="px-4 py-2 text-white bg-rpv-blue rounded-lg hover:bg-opacity-90 transition duration-150"
                    >
                        Search
                    </button>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery.length > 0) { %>
                        <a href="/directory" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-100 transition duration-150">Clear</a>
                    <% } %>
                </div>
            </div>
        </form>

        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-100">
                        <tr class="text-left">
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Primary First</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Primary Last</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Secondary First</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Secondary Last</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Contact Info</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Email</th>
                            <th class="sticky top-0 z-10 px-4 py-3 text-xs font-medium text-gray-600 uppercase tracking-wider">Notes</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                        <% owners.forEach(function(owner) { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm text-gray-700"><%= owner.PrimaryOwnerFirstName %></td>
                                <td class="px-4 py-3 text-sm text-gray-700"><%= owner.PrimaryOwnerLastName %></td>
                                <td class="px-4 py-3 text-sm text-gray-700"><%= owner.SecondaryOwnerFirstName %></td>
                                <td class="px-4 py-3 text-sm text-gray-700"><%= owner.SecondaryOwnerLastName %></td>
                                <td class="px-4 py-3 text-sm text-gray-700 break-words"><%= owner.contact_info %></td>
                                <td class="px-4 py-3 text-sm text-blue-600"><a href="mailto:<%= owner.email %>" class="hover:underline"><%= owner.email %></a></td>
                                <td class="px-4 py-3 text-sm text-gray-600 break-words"><%= owner.notes %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

</body>
</html>
