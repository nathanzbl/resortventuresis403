<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Property Schedules</title>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom RPV Color Configuration */
        :root {
            --primary-color: #003262; /* Deep Navy Blue */
            --accent-color: #FF5A5F;
        }
        /* Custom utility classes to use RPV colors */
        .text-rpv-blue { color: var(--primary-color); }
        .bg-rpv-blue { background-color: var(--primary-color); }
        .border-rpv-accent { border-color: var(--accent-color); }
        .hover\:bg-rpv-accent:hover { background-color: var(--accent-color); }
        .focus\:ring-rpv-accent:focus { --tw-ring-color: var(--accent-color); }
        .bg-rpv-accent {background-color: var(--accent-color);}
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc; /* Slate 50 from Login Page */
            padding-top: 4rem;
        }
    </style>
</head>

<%- include('partials/navbar.ejs') %>

<body class="bg-gray-50 min-h-screen">
    <div class="max-w-5xl mx-auto p-6">
        <header class="mb-6">
            <h1 class="text-3xl font-extrabold text-gray-800">Property Schedules</h1>
            <p class="mt-1 text-sm text-gray-600">Select a property to view its schedule</p>
        </header>

        <section class="mb-6">
            <form method="GET" action="/schedules" class="flex flex-col sm:flex-row sm:items-center gap-4">
                <label for="property_name" class="sr-only">Select property</label>
                <div class="flex-1">
                    <select id="property_name" name="property_name" required
                                    class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="">-- Select a property --</option>
                        <% properties.forEach(function(p) { %>
                            <option value="<%= p.property_name %>"
                                <%= p.property_name === selectedProperty ? 'selected' : '' %>>
                                <%= p.property_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div>
                    <button type="submit"
                                    class="w-full sm:w-auto inline-flex items-center justify-center bg-blue-600 text-white px-4 py-2 rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">
                        Generate Property Schedule
                    </button>
                </div>
            </form>
        </section>

        <% if (schedules && schedules.length > 0) { %>
            <section class="bg-white rounded-lg shadow overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
                    <h2 class="text-xl font-semibold text-gray-800">Schedule for <span class="text-blue-600"><%= selectedProperty %></span></h2>
                    <% if (user && user.role === 'manager') { %>
                        <button onclick="openAddScheduleModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md shadow-sm">
                            Add Schedule
                        </button>
                    <% } %>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Start Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">End Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <% if (user && user.role === 'manager') { %>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-100">
                            <% schedules.forEach(function(row) { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= row.start_date.toISOString().slice(0,10) %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= row.end_date.toISOString().slice(0,10) %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= row.owner_name %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= row.status || '' %></td>
                                    <% if (user && user.role === 'manager') { %>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            <div class="flex gap-2">
                                                <button onclick='openEditScheduleModal(<%= JSON.stringify(row) %>)'
                                                    class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1.5 rounded-md text-xs font-medium transition-colors duration-150 shadow-sm">
                                                    Edit
                                                </button>
                                                <button onclick="deleteSchedule(<%= row.schedule_id %>)"
                                                    class="bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-md text-xs font-medium transition-colors duration-150 shadow-sm">
                                                    Delete
                                                </button>
                                            </div>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </section>
        <% } else if (selectedProperty) { %>
            <div class="mt-6">
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
                    <p class="text-sm text-yellow-800">No schedule rows found for <span class="font-medium"><%= selectedProperty %></span>.</p>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Add Schedule Modal -->
    <div id="addScheduleModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-lg">
            <h2 class="text-xl font-semibold mb-4">Add New Schedule</h2>
            <form id="addScheduleForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Property</label>
                    <select name="property_id" required class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="">-- Select Property --</option>
                        <% properties.forEach(function(p) { %>
                            <option value="<%= p.property_id %>"><%= p.property_name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Owner</label>
                    <select name="owner_id" required class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="">-- Select Owner --</option>
                        <% owners.forEach(function(o) { %>
                            <option value="<%= o.owner_id %>"><%= o.owner_name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                    <input type="date" name="start_date" required class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                    <input type="date" name="end_date" required class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <input type="text" name="status" class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeAddScheduleModal()" class="bg-gray-300 hover:bg-gray-400 px-4 py-2 rounded">Cancel</button>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Add Schedule</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Schedule Modal -->
    <div id="editScheduleModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-lg">
            <h2 class="text-xl font-semibold mb-4">Edit Schedule</h2>
            <form id="editScheduleForm" class="space-y-4">
                <input type="hidden" name="scheduleId" id="editScheduleId">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Property</label>
                    <select name="property_id" id="editPropertyId" required class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="">-- Select Property --</option>
                        <% properties.forEach(function(p) { %>
                            <option value="<%= p.property_id %>"><%= p.property_name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Owner</label>
                    <select name="owner_id" id="editOwnerId" required class="w-full border border-gray-300 rounded px-3 py-2">
                        <option value="">-- Select Owner --</option>
                        <% owners.forEach(function(o) { %>
                            <option value="<%= o.owner_id %>"><%= o.owner_name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                    <input type="date" name="start_date" id="editStartDate" required class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                    <input type="date" name="end_date" id="editEndDate" required class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <input type="text" name="status" id="editStatus" class="w-full border border-gray-300 rounded px-3 py-2">
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeEditScheduleModal()" class="bg-gray-300 hover:bg-gray-400 px-4 py-2 rounded">Cancel</button>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Update Schedule</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openAddScheduleModal() {
            document.getElementById('addScheduleModal').classList.remove('hidden');
        }

        function closeAddScheduleModal() {
            document.getElementById('addScheduleModal').classList.add('hidden');
            document.getElementById('addScheduleForm').reset();
        }

        function openEditScheduleModal(schedule) {
            document.getElementById('editScheduleId').value = schedule.schedule_id;
            document.getElementById('editPropertyId').value = schedule.property_id;
            document.getElementById('editOwnerId').value = schedule.ownerid;
            document.getElementById('editStartDate').value = new Date(schedule.start_date).toISOString().slice(0,10);
            document.getElementById('editEndDate').value = new Date(schedule.end_date).toISOString().slice(0,10);
            document.getElementById('editStatus').value = schedule.status || '';
            document.getElementById('editScheduleModal').classList.remove('hidden');
        }

        function closeEditScheduleModal() {
            document.getElementById('editScheduleModal').classList.add('hidden');
            document.getElementById('editScheduleForm').reset();
        }

        document.getElementById('addScheduleForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/schedules/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (err) {
                alert('Error adding schedule');
            }
        });

        document.getElementById('editScheduleForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const scheduleId = data.scheduleId;
            delete data.scheduleId;

            try {
                const response = await fetch(`/schedules/edit/${scheduleId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (err) {
                alert('Error updating schedule');
            }
        });

        async function deleteSchedule(scheduleId) {
            if (!confirm('Are you sure you want to delete this schedule?')) return;

            try {
                const response = await fetch(`/schedules/delete/${scheduleId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            } catch (err) {
                alert('Error deleting schedule');
            }
        }
    </script>
   
    <%- include('partials/footer.ejs') %>

</body>
</html>
