    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        /* Custom RPV Color Configuration (Professional & Clean) */
        :root {
            --primary-color: #003262; /* Deep Navy Blue */
            --accent-color: #FF5A5F;  /* Coral/Red Accent */
            --light-bg: white;      /* Very Light Gray for Section background */
        }
        /* Custom utility classes to use RPV colors */
        .text-rpv-blue { color: var(--primary-color); }
        .bg-rpv-blue { background-color: var(--primary-color); }
        .bg-rpv-accent { background-color: var(--accent-color); }
        .border-rpv-accent { border-color: var(--accent-color); }
        .hover\:bg-rpv-accent:hover { background-color: var(--accent-color); }
        .focus\:ring-rpv-accent:focus { --tw-ring-color: var(--accent-color); }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--light-bg); 
        }
        /* Style for the photo placeholder */
        .manager-photo {
            width: 150px;
            height: 150px;
            background-color: #ccc;
            border-radius: 50%;
            flex-shrink: 0;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            text-align: center;
            color: #555;
        }

        .manager-photo img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        * {box-sizing:border-box}

        /* Slideshow container */
        .slideshow-container {
            max-width: 400px;
            position: relative;
            margin: auto;
        }

        /* Hide the images by default */
        .mySlides {
            display: none;
            position: relative; /* Needed for absolute positioning of text/caption */
        }

        /* Image Sizing and Scaling Fix */
        .mySlides img {
            width: 100%;
            height: 300px; /* **FIXED HEIGHT FOR LOW-RES IMAGES** */
            object-fit: cover; /* Ensures image fills the area without stretching */
            display: block;
        }

        /* Next & previous buttons */
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            margin-top: -22px;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
            background-color: rgba(0, 50, 98, 0.6); /* Semi-transparent RPV Blue */
        }

        /* Position the "next button" to the right */
        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

        /* On hover, add a darker background */
        .prev:hover, .next:hover {
            background-color: var(--primary-color); /* Deep Navy Blue on hover */
        }

        /* Caption text - NOW with better contrast and padding */
        .text {
            color: white;
            font-size: 16px;
            padding: 10px 15px;
            width: 100%;
            text-align: left;
            
            font-weight: 600;
            /* These properties are removed/changed to put it back in the normal flow */
            position: static; 
            bottom: auto; 
        }

        /* Number text (1/3 etc) */
        .numbertext {
            color: white;
            font-size: 12px;
            padding: 8px 12px;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgba(0, 0, 0, 0.5);
        }

        /* The dots/bullets/indicators */
        .dot {
            cursor: pointer;
            height: 12px; /* Slightly smaller dots */
            width: 12px;
            margin: 0 4px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            transition: background-color 0.6s ease;
        }

        .active, .dot:hover {
            background-color: white; 
        }

        /* Fading animation */
        .fade {
            animation-name: fade;
            animation-duration: 1.5s;
        }

        @keyframes fade {
            from {opacity: .4}
            to {opacity: 1}
        }

        .image-container {
            position: relative;
            width: 100%;
        }

        .image-container img {
            display: block;
            width: 100%;
            height: auto;
        }

        .overlay-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white; /* Make text color readable */
            z-index: 1;
            text-align: center;
            /* Add any other styles like font-size, font-family, etc. */
         }

    </style>
</head>
